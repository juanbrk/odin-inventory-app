extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category name:
      input#name.form-control(type='text', placeholder='accessory, piece, etc.' name='name' value=(undefined===category ? '' : category.name))
    div.form-group
      label(for='description') Description:
      textarea#summary.form-control(type='textarea', placeholder='Description (Max 250 characters)' name='description')
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg