extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Brand name:
      input#name.form-control(type='text', placeholder='Wintheiser Group' name='name' value=(undefined===brand ? '' : brand.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg