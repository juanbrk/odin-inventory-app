extends layout

block content

  h1 Brand: #{brand.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Items
    
    dl
        each item in brand_items
            dt 
              a(href=item.url) #{item.name}
            dd.small #{item.description}
        else
            p This brand has no items

    h4 Seeds

    dl
        each seed in brand_seeds
          dt 
            a(href=seed.url) #{seed.name}
          dd.small #{seed.description}

        else
            p This brand has no items
