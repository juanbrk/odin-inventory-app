extends layout

block content
  h1 Sign up
  form(action="" method="POST")
    div.form-group
      label(for='username') Username:
      input.form-control(
        type='text' 
        name='username' 
        placeholder='username'
      )
    div.form-group
      label(for='password') Password:
      input.form-control(
        type='password' 
        name='password' 
        placeholder='type in your password'
      )
    
    button.btn.btn-primary(type='submit') Sign Up

    if errors 
      ul
       for error in errors
        li!= error.msg